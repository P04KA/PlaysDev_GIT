upstream apache_backend {
    server apache:80;
}
upstream redblue {
    server 158.160.4.160:8081;  # Красный сервер
    server 158.160.4.160:8082;  # Синий сервер
}

server {
    if ($host = docker-tests.ddns.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name docker-tests.ddns.net;

    location /.well-known/acme-challenge/ {
        root /certbot/www;
    }

    if ($scheme = 'http') {
        return 301 https://$host$request_uri;
    }


}
server {

    listen 443 ssl;
    listen [::]:443 ssl ipv6only=on;

    server_name docker-tests.ddns.net;
    ssl_certificate /etc/letsencrypt/live/docker-tests.ddns.net-0001/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/docker-tests.ddns.net-0001/privkey.pem; # managed by Certbot

    root /sites/starter;
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }

    ###
    # Apache container
    ###

    location ~ \.php$ {
        proxy_pass http://apache_backend;
    }

    location /info.php {
        proxy_pass http://apache_backend/info.php;
    }

    location /secondpage {
        root /sites/starter;
        try_files $uri /secondpage.html;
    }

    location /music {
        alias /sites/starter/music/;

        default_type audio/mpeg;
        add_header Content-Disposition 'attachment; filename="$uri"';

        try_files $uri $uri/music.mp3 =404;
    }

    location /secondserver {
        proxy_pass https://2ip.ru/;
    }
    location /redblue {
        proxy_pass http://redblue;
        proxy_set_header Host $host;
    }
}

server {
    listen 8081;
    server_name 158.160.4.160;
    location / {
            default_type text/html;
            return 200 '<html><body style="background-color:red;"></body></html>';
            add_header Content-Type text/html;
}
}
server {
    listen 8082;
    server_name 158.160.4.160;
    location / {
            default_type text/html;
            return 200 '<html><body style="background-color:blue;"></body></html>';
            add_header Content-Type text/html;
 }
}   